<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="cekurte_component.controller.http.rest.class">Cekurte\ComponentBundle\Controller\Http\Rest\Controller</parameter>
        <parameter key="cekurte_component.serializer.http.rest.class">Cekurte\ComponentBundle\Serializer\Http\Rest\Serializer</parameter>
        <parameter key="cekurte_component.service.http.rest.class">Cekurte\ComponentBundle\Service\Http\Rest\ServiceManager</parameter>
    </parameters>

    <services>
        <service id="cekurte_component.controller.http.rest" class="%cekurte_component.controller.http.rest.class%"></service>
        <service id="cekurte_component.serializer.http.rest" class="%cekurte_component.serializer.http.rest.class%"></service>
        <service id="cekurte_component.service.http.rest" class="%cekurte_component.service.http.rest.class%"></service>
    </services>
</container>
